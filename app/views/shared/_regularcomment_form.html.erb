<%= form_for @regularcomment do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<table border=0 ><tr><td>
  <div class="field">
    <%= f.label :Comment %><br/>	
    <%= f.text_area( :details, :size => "50x4" , :maxlength => 220 ) %>
  </div>
<input id="regularcomment_regularshare_id" name="regularcomment[regularshare_id]" type="hidden" value="<%= @regularshare.id %>" />
<input id="regularcomment_user_id" name="regularcomment[user_id]" type="hidden" value="<%= current_user.id %>" />
<div class="actions">
<%= f.submit "Post" %>
</div>
</td></tr></table>
<% end %>
