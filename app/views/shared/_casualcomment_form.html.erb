<%= form_for @casualcomment do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<table border=0 ><tr><td>
  <div class="field">
    <%= f.label :Comment %><br/>	
    <%= f.text_area( :details, :size => "50x4" , :maxlength => 220 ) %>
  </div>
<input id="casualcomment_casualshare_id" name="casualcomment[casualshare_id]" type="hidden" value="<%= @casualshare.id %>" />
<input id="casualcomment_user_id" name="casualcomment[user_id]" type="hidden" value="<%= current_user.id %>" />
<div class="actions">
<%= f.submit "Post" %>
</div>
</td></tr></table>
<% end %>
