<% @regularshares.each do |regularshare| %>
  <tr>
    <td><%= regularshare.user_id %></td>
    <td><%= regularshare.source_id %></td>
    <td><%= regularshare.destination_id %></td>
    <td><%= regularshare.starttime %></td>
    <td><%= regularshare.endtime %></td>
    <td><%= regularshare.monday %></td>
    <td><%= regularshare.tuesday %></td>
    <td><%= regularshare.wednesday %></td>
    <td><%= regularshare.thursday %></td>
    <td><%= regularshare.friday %></td>
    <td><%= regularshare.saturday %></td>
    <td><%= regularshare.sunday %></td>
    <td><%= regularshare.vehicle %></td>
    <td><%= regularshare.amount %></td>
    <td><%= regularshare.numofpassengers %></td>
    <td><%= regularshare.details %></td>
    <td><%= link_to 'Show', regularshare %></td>
    <td><%= link_to 'Edit', edit_regularshare_path(regularshare) %></td>
