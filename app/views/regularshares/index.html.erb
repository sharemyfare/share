<table>
  <tr>
    <th>User</th>
    <th>Source</th>
    <th>Destinatoin</th>
    <th>Starttime</th>
    <th>Endtime</th>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
